<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sarthak.trackit.trackit.activities.AccountSetupActivity">

    <include
        android:id="@+id/account_setup_activity_toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/et_account_display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:hint="Display Name..."
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_account_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:hint="Username... (Username must be unique)"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/button_account_sign_up"
        style="@style/SmallButton"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/button_selector_states"
        android:padding="@dimen/padding_small"
        android:text="SET UP ACCOUNT"
        android:textColor="@android:color/white" />

</LinearLayout>