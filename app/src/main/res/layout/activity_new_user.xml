<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sarthak.trackit.trackit.activities.NewUserActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/new_user_activity_toolbar"
            layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_phone_login"
            style="@style/SmallButton"
            android:layout_gravity="start"
            android:background="@drawable/btn_selector_green"
            android:drawableStart="@drawable/ic_phone"
            android:text="Log In With Phone Number"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/button_fb_login"
            style="@style/SmallButton"
            android:layout_gravity="start"
            android:background="@drawable/btn_selector_fb"
            android:drawableStart="@drawable/ic_facebook"
            android:text="Log In With Facebook"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            tools:ignore="RtlCompat" />

        <Button
            android:id="@+id/button_guest_sign_in"
            style="@style/SmallButton"
            android:layout_gravity="start"
            android:background="@drawable/btn_selector_grey"
            android:drawableStart="@drawable/ic_guest"
            android:text="Log In As Guest"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
