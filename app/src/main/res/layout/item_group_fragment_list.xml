<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/padding_smaller">

    <com.sarthak.trackit.trackit.utils.SquareImageView
        android:id="@+id/image_group_dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image_group_dp"
        android:layout_toRightOf="@+id/image_group_dp"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/text_group_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_group_name"
        android:layout_marginTop="10dp" />

</RelativeLayout>