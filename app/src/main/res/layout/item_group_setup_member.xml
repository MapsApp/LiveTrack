<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_smaller"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <com.sarthak.trackit.trackit.utils.SquareImageView
        android:id="@+id/image_group_member"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_group_member"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_smallest"
        android:text="@string/app_name"
        android:textColor="@color/md_grey_700"
        android:textSize="12sp" />
</RelativeLayout>